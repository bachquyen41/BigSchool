@model IEnumerable< ThucHanhBuoi2.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul>
        @foreach(var course in Model)
        {
            <li>
                @course.DateTime-@course.Lecturer.UserName
            </li>
        }
    </ul>
</div>
 <ul class="course">
     @foreach (var course in Model)
     {
         <li>
             <div class="date">
                 <div class="month">
                     @course.DateTime.ToString("MM")
                 </div>
                 <div class="day">
                     @course.DateTime.ToString("dd")
                 </div>
                 
             </div>
              <div class="detailes">
                 <span class="lecturer">
                     @course.Lecturer.UserName
                 </span>
                 <span class="category">
                     @course.Category.Name
                 </span>

             </div>


         </li>
     }
 </ul>



